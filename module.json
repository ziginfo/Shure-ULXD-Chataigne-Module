{
  "name": "Shure ULX-D",
  "type": "TCP Client",
  "path": "Hardware",

  "version": "1.3",
  "description": "Monitor and Control for Shure ULX-D wireless systems",
  "url": "https://github.com/ziginfo/Shure-ULXD-Chataigne-Module",
  "downloadURL": "https://github.com/ziginfo/Shure-ULXD-Chataigne-Module/archive/refs/heads/main.zip",

  "hasInput": true,
  "hasOutput": true,

  "hideDefaultCommands": true,

  "defaults": {
    "autoAdd": false,
    "protocol": "Direct",
    "output": {
      "local": false,
      "remoteHost" : "",
      "remotePort": 2202
    }
  },

  "parameters": {
  },

  "hideDefaultParameters": [
    "autoAdd",
    "protocol",
    "messageStructure",
    "customSeparator",
    "firstValueIsTheName",
    "output/local",
    "output/remotePort",
    "pass_through",
    "receiveFrequency"
  ],

  "scripts": ["ulxd.js"],

  "values": {
  },

  "commands": {
  
     
	"send String": {
      "menu": "",
      "callback": "sendLine",
      "parameters": {    
        "Command Line": {
          "type": "String",
          "default": "< INSERT THE COMMAND HERE >",
          "multiline" : true
        }
      }
    },
    
    "set Diversity Summing": {
      "menu": "ReceiverControls",
      "callback": "diversitySum",
      "parameters": {
         "Diversity Summing": {
		 "type": "Enum",
          "options": {
            "OFF": "OFF",
            "Summing 1&2": "1+2",
            "Summing 3&4": "3+4",
            "Summing 1&2 / 3&4": "1+2/3+4" }
        }
      }
    },
    "set Audio Summing": {
      "menu": "ReceiverControls",
      "callback": "audioSum",
      "parameters": {
        "Audio Summing": {
		 "type": "Enum",
          "options": {
            "OFF": "OFF",
            "Summing 1&2": "1+2",
            "Summing 3&4": "3+4",
            "Summing 1&2 / 3&4": "1+2/3+4",
            "Summing 1&23&4": "1+2+3+4"  }
        }
        
        
      }
    },
    "set High Density": {
      "menu": "ReceiverControls",
      "callback": "highDens",
      "parameters": {
        "High Density": {
		 "type": "Enum",
          "options": {
            "OFF": "OFF",
            "ON": "ON" }
        }
        
        
      }
    },
    "set Device Name": {
      "menu": "ReceiverControls",
      "callback": "setDeviceID",
      "parameters": {
        "Device Name": {
          "type": "String"
        }
      }
    },
    "set Channel Name": {
      "menu": "EmitterControls",
      "callback": "setChannelName",
      "parameters": {
        
        "new Name": {
          "type": "String"
        }
      }
    },
    "set Audio Gain": {
      "menu": "EmitterControls",
      "callback": "setAudioGain",
      "parameters": {
       
        "Gain": {
          "type": "Integer",
          "min": -18,
          "max": 42,
          "default": 0
        }
      }
    },
    "increase Audio Gain": {
      "menu": "EmitterControls",
      "callback": "incAudioGain",
      "parameters": {
       
        "Gain increase": {
          "type": "Integer",
          "min": 0,
          "max": 10,
          "default": 1
        }
      }
    },
    "decrease Audio Gain": {
      "menu": "EmitterControls",
      "callback": "decAudioGain",
      "parameters": {
       
        "Gain reduction": {
          "type": "Integer",
          "min": 0,
          "max": 10,
          "default": 1
        }
      }
    },
    "Update all Values": {
      "menu": "Requests",
      "callback": "getAll"
    },
    "Requests": {
      "menu": "Requests",
      "callback": "requests",
      "parameters": {
        "Request": {
          "type": "Enum",
          "options": {
            "get All": "< GET 0 ALL >",
            "get RF Level": "< GET 0 RX_RF_LVL >",
            "get Audio Level": "< GET 0 AUDIO_LVL >",
            "get Audio Gain": "< GET 0 AUDIO_GAIN >",
            "get Battery Bars": "< GET 0 TX_BATT_BARS >",
            "get Receiver Name": "< GET DEVICE_ID >",
          	"get Transmitter Name": "< GET 0 TX_TYPE >",
            "get Channel Name": "< GET 0 CHAN_NAME >",
            "get Firmware": "< GET FW_VER >",
            "get Frequency": "< GET 0 FREQUENCY >",
            "get Group&Channel": "< GET 0 GROUP_CHAN >"  }  }
      }
    },
    "Set Meter Rate": {
      "menu": "Requests",
      "callback": "setMeterRate",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 4,
          "default": 1
        },
        "Rate": {
          "type": "Enum",
          "options": {
            "no Updates": "00000",
            "very slow (15sec)": "15000",
            "slow (5sec)": "05000",
            "medium (2,5sec)": "02500",
            "fast (1sec)": "01000",
            "faster (0,5sec)": "00500",
            "very fast (0.2sec)": "00200",
            "fastest (0,1sec)": "00100"
          }
        }
      }
    }
  }
}
